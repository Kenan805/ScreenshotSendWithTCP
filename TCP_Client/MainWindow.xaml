<Window x:Class="TCP_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCP_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Margin="4" BorderThickness="2" BorderBrush="Red" Padding="1">
            <Image x:Name="imgFromServer" Stretch="Fill"/>
        </Border>
        <Grid Grid.Row="1">
            <Button Click="Button_Click" HorizontalAlignment="Right" FontSize="18"
            Height="30" Width="100" Content="Receive" Margin="0,0,20,0" VerticalAlignment="Center"/>
            <Button HorizontalAlignment="Right" FontSize="18" Click="Button_Click_1"
                Height="30" Width="100" Content="Connect" Margin="0,0,150,0" VerticalAlignment="Center"/>
        </Grid>


    </Grid>
</Window>
